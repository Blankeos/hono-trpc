{
  "name": "hono-trpc",
  "version": "0.0.0",
  "workspaces": [
    "packages/client",
    "packages/server"
  ],
  "scripts": {
    "// dev": "This will work in Bun 1.1.4",
    "1.1.4 dev": "bun --filter * dev",
    "client:dev": "bun run --cwd packages/client dev",
    "server:dev": "bun run --cwd packages/server dev",
    "dev": "concurrently --names 'client,server' 'bun run client:dev' 'bun run server:dev'"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^8.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
